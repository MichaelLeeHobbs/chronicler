{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022"],
    "types": ["vitest/globals"],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@chronicler/*": ["src/*"]
    }
  },
  "include": ["src", "tests", "vitest.config.ts", "tsup.config.ts"],
  "exclude": ["dist", "node_modules"]
}
